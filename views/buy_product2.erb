  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Aling Nena</a>
          <a class="navbar-brand" href="/products">Products</a>
          <a class="navbar-brand" href="/about">About Us</a>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="admin">
        <form class="form-horizontal" role="form" method="POST" action="/buy_product/<%= params[:id]%>">
          <h3><center>
            <div class="form-group">
              <label for="product">Product: </label>
              <label for="item"><%= @products.name %></label>
              <br />
              <label for="product">Cost: </label>
              <label for="item"><%= @products.price %></label>
              <br />
              <label for="product">In Stock: </label>
              <label for="item"><%= @products.quantity %></label>
            </div>
          <br />
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="quantity" class="col-sm-2 control-label">Quantity: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="quantity" value="0">
              </div>
            </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="thousands" class="col-sm-2 control-label">P 1000: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="thousands" value="0">
              </div>
          </div>
          <div class="form-group">            
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="five_hundreds" class="col-sm-2 control-label">P 500: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="five_hundreds" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="hundreds" class="col-sm-2 control-label">P 100: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="hundreds" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="fifties" class="col-sm-2 control-label">P 50: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="fifties" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="twenties" class="col-sm-2 control-label">P 20: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="twenties" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="tens" class="col-sm-2 control-label">P 10: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="tens" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="fives" class="col-sm-2 control-label">P 5: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="fives" value="0">
              </div>
          </div>
          <div class="form-group">
            <label for="space"class="col-sm-3 control-label"></label>
            <label for="ones" class="col-sm-2 control-label">P 1: </label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name="ones" value="0">
              </div>
          </div>
          <button class="btn btn-default btn-primary">Buy</button>
        </center></h3>
        </form>
      </div>

    </div><!-- /.container -->
